		<table id="table" class="table dataTable">
			<thead>
				<th>Customer</th>
				<th>Transaction Date</th>
				<th>Currency</th>
				<th>Amount</th>
				<th>Status</th>
			</thead>
			<tbody>
				<% @transaction.each do |t| %>
				<% if t.paid == false && t.refunded == false %>
				<tr>
					<td> <% unless t.customer.nil?%>
					<%= t.customer.firstname %>
					<% end %>

					<% unless t.customer.nil?%>
					<%= t.customer.lastname %>
					<% end %> </td>
					<td> <%= t.created %> </td>
					<td> <%= t.currency %> </td>
					<td> $<%= t.amount %> </td>
					<td>
					<% if t.paid == false && t.refunded == false %>
