							<span class="glyphicon glyphicon-warning-sign"> Pending / Failed</span> 
						</span>
					<% end %>
					</td>
				</tr>
				<% end %>
				<% end %>
			</tbody>
			<tfoot>
				<th>Customer</th>
				<th>Transaction Date</th>
				<th>Currency</th>
				<th>Amount</th>
				<th>Status</th>
			</tfoot>
		</table>
	</div>
</div>

